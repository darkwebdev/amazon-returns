{
  "manifest_version": 3,
  "name": "Amazon Returns Cost Information",
  "version": "1.0.0",
  "description": "Displays return cost information on Amazon product pages for US and Germany",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.amazon.com/*",
    "*://*.amazon.de/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*/dp/*",
        "*://*.amazon.com/dp/*",
        "*://*.amazon.com/gp/product/*",
        "*://*.amazon.de/*/dp/*",
        "*://*.amazon.de/dp/*",
        "*://*.amazon.de/gp/product/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
